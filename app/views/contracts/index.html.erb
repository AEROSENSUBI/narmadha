<link rel="stylesheet" href="stylesheets/view_table.css">

<h1>Contracts</h1>

<%= link_to 'New contract', new_contract_path, :class =>"action-button shadow animate blue" %><br/><br/>
<p id="notice"><%= notice %></p>
<table class="responstable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Piece Rate</th>
      <th style="width:20%">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= link_to contract.name, contract %></td>
        <td><%= contract.start_date %></td>
        <td><%= contract.end_date %></td>
        <td><%= contract.customer_unit_price %></td>        <td><%= link_to image_tag('edit.png', :alt => 'Edit', :title => 'Edit'), edit_contract_path(contract) %>&nbsp;&nbsp;<%= link_to image_tag('cross.png', :alt => 'Delete', :title => 'Delete'), contract_path(contract.id), method: :delete, data: { confirm: 'Are you sure you want to delete this contract ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>